{
    "name": "timelapse-front",
    "version": "0.1.2",
    "description": "Minimalist Timelapse",
    "engines": {
        "node": "8.3.0",
        "npm": "5.3.0"
    },
    "scripts": {
        "build": "NODE_ENV=production webpack --progress",
        "start": "NODE_ENV=production node server.js",
        "heroku-prebuild": "echo This runs before Heroku installs your dependencies.",
        "heroku-postbuild": "NODE_ENV=production webpack --progress",
        "test": "node nightwatch.conf.js && ./node_modules/.bin/nightwatch --env local",
        "sauce": "node nightwatch.conf.js && ./node_modules/.bin/nightwatch -e chrome,chromemac,firefox",
        "dev": "webpack-dev-server --inline --hot --progress",
        "eslint": "eslint src --ignore-path ./.gitignore --ext=.js,.jsx",
        "prettier": "prettier --tab-width 4 --single-quote --trailing-comma es5 '{src,test,.}/**/*.js'",
        "lint": "npm run prettier --write > /dev/null && npm run eslint && npm run stylelint",
        "stylelint": "stylelint ./css/*.scss --config ./stylelint.config.js",
        "stylefmt": "stylefmt ./css/*.scss -c ./stylelint.config.js",
        "validate": "npm ls"
    },
    "author": "me@jfroffice.me",
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^6.7.2",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.0.15",
        "babel-preset-react": "^6.0.15",
        "babel-preset-stage-0": "^6.0.15",
        "css-loader": "^0.28.4",
        "dotenv": "^4.0.0",
        "eslint": "^3.14.0",
        "eslint-config-airbnb": "^14.0.0",
        "eslint-plugin-babel": "^4.0.1",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^3.0.2",
        "eslint-plugin-react": "^6.9.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "html-webpack-plugin": "^2.24.0",
        "node-sass": "^4.5.0",
        "optimist": "^0.6.1",
        "pre-commit": "^1.1.3",
        "precommit-hook": "^3.0.0",
        "react-hot-loader": "^1.3.1",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "stylelint": "^8.2.0",
        "webpack": "^3.5.4",
        "webpack-dev-server": "^2.7.1"
    },
    "dependencies": {
        "clean-webpack-plugin": "^0.1.16",
        "copy-webpack-plugin": "^4.0.1",
        "draft-js": "^0.10.1",
        "express": "^4.15.4",
        "favicons-webpack-plugin": "^0.0.7",
        "medium-draft": "^0.5.2",
        "moment": "^2.15.2",
        "nightwatch": "^0.9.12",
        "postcss-loader": "^2.0.6",
        "prettier": "^1.5.3",
        "raven-js": "^3.10.0",
        "react": "^15.6.1",
        "react-addons-css-transition-group": "15.6.0",
        "react-dom": "^15.6.1",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "react-s-alert": "^1.2.2",
        "saucelabs": "1.4.0",
        "selenium-download": "2.0.10",
        "string.prototype.startswith": "0.2.0",
        "whatwg-fetch": "^2.0.3"
    },
    "pre-commit": [
        "lint"
    ]
}
